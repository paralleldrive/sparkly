{
  "name": "sparkly",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint-no-fix": "next lint",
    "lint": "echo 'Linting...' && next lint --fix && echo 'Lint complete'.",
    "test": "node -r @swc/register src/test.js && npm run -s lint-no-fix",
    "test-color": "node -r @swc/register src/test.js | tap-nirvana",
    "watch": "watch 'clear && npm run -s test-color && npm run -s lint' src"
  },
  "pre-commit": [
    "lint",
    "test-color"
  ],
  "dependencies": {
    "next": "15.4.6",
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@swc/core": "^1.13.3",
    "@swc/register": "^0.1.10",
    "eslint": "^9.33.0",
    "eslint-config-next": "^15.4.6",
    "eslint-config-prettier": "^10.1.8",
    "pre-commit": "^1.2.2",
    "prettier": "^3.6.2",
    "riteway": "^8.0.0",
    "tap-nirvana": "^1.1.0",
    "watch": "^1.0.2"
  }
}
